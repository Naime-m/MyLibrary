@model MyLibrary.Models.Book

@*

*@
@{
    ViewData["Title"] = "Create";

}

<div>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="Author"></label>
            <input asp-for="Author">
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate">
        </div>
        <div>
            <label asp-for="Category"></label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()"></select>
        </div>
        <button type="submit" value="Create">Submit</button>
    </form>
</div>

<a asp-action="Index">Back to Books List</a>





